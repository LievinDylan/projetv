<%- include('partials/header') %>
<link rel="stylesheet" href="/css/mode.css">
</head>
<%-include('partials/nav') %>
<body>
    <div class="container">
        <h1 class="title">Voici votre prochaine mission</h1>
        <h4 class="difficulty">Niveau : Valorant</h4>
        <div class="section">
            <div class="section-left">
                <img class="section-img" src="/img/img_agent/<%= agent.name %>.png" alt="Une image de <%= agent.name %>">
                <em class="quote">"<%= agent.quote %>"</em>  
            </div>
            <div class="section-right">
                <% if (agent.name === "Kayo") { %>
                    <h1 class="animate-text">KAY/O</h2>
                <% } else { %>
                    <h1 class="animate-text"><%= agent.name %></h1>
                <% } %>
                    <p class="animate-text"><%= agent.role.name %></p>
                    <h3 class="animate-text">Arsenal disponible :</h3>
                        <p class="animate-text"><span><%= agent.weapons[j].type.name %></span> : <%= agent.weapons[j].name %></p>
                         <% if (agent.weapons[j].name === "Classic") { %>
                             <em class="classic animate-text">Le classic... Une vraie mission !</em>
                         <% } %>
                    <h3 class="animate-text">Compétence autorisée :</h3>
                        <% const agentSkills = agent.skills.map(skill => skill) %>
                        <% for( let i = 0; i < agentSkills.length; i++ ) { %>
                            <% if (i === k) { %>
                                <div class="skill">
                                <img class="img-skill hidden" src="/img/icon_skill/<%= agentSkills[k].id %>.png" alt="Icone de <%= agentSkills[k].name %>">
                                <p class="animate-text"><%= agentSkills[k].name %></p>
                                </div>
                                <p class="desc-skill animate-text"><%= agentSkills[k].description %></p>
                            <% } %>
                        <% } %>
                        <a href="/generator/valorant" class="chance"><button class="animate-text">Nouvelle mission ?</button></a>
            </div>
        </div>
    </div>
    <script src="/js/valorant.js"></script>
</body>
<%- include('partials/footer') %>