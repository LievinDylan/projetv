<%- include('partials/header') %>
<link rel="stylesheet" href="/css/mode.css">
</head>
<%-include('partials/nav') %>
<body>
    <div class="container">
        <h1 class="title">Voici votre prochaine mission</h1>
        <div class="section">
            <div class="section-left">
                <img class="section-img" src="/img/img_agent/<%= agent.name %>.png" alt="Une image de <%= agent.name %>">
                <em>"<%= agent.quote %>"</em>  
            </div>
            <div class="section-right">
                <% if (agent.name === "Kayo") { %>
                    <h1>KAY/O</h2>
                <% } else { %>
                    <h1><%= agent.name %></h1>
                <% } %>
                        <p><%= agent.role.name %></p>
                    <h3>Arsenal disponible :</h3>
                        <p><span><%= agent.weapons[j].type.name %></span> : <%= agent.weapons[j].name %></p>
                         <% if (agent.weapons[j].name === "Classic") { %>
                             <em class="classic">Le classic... Une vraie mission !</em>
                         <% } %>
                    <h3>Compétence autorisée :</h3>
                        <% const agentSkills = agent.skills.map(skill => skill) %>
                        <% for( let i = 0; i < agentSkills.length; i++ ) { %>
                            <% if (i === k) { %>
                                <p><%= agentSkills[k].name %></p>
                            <% } %>
                        <% } %>
                        <a href="/generator/valorant" class="chance"><button>Nouvelle mission ?</button></a>
            </div>
        </div>

    </div>
</body>
</html>