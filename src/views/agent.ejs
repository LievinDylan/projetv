<%- include('partials/header') %>
<link rel="stylesheet" href="/css/agent.css">
</head>
<%- include('partials/nav') %>
<body>
    <div class="agent_container">
    <div class="section">
    <div class="section-left">
        <img src="/img/img_agent/<%= agent.name %>.png">
    </div>
    <div class="section-right">
        <% if (agent.name === "Kayo") { %>
            <h1 class="agent_title">Présentation de KAY/O</h1>
        <% } else { %>
            <h1 class="agent_title">Présentation de <%= agent.name %></h1>
        <% } %>
    <h3>Rôle : </h3>
    <p><%= agent.role.name %></p>
    <h3>Compétences :</h3>
    <% agent.skills.forEach(skill => { %>
     <div class="skill">
        <img class="img-skill" src="/img/icon_skill/<%= skill.id %>.png" alt="Icone de <%= skill.name %>">
        <p><%= skill.name %></p>
        </div>
        <p class="desc-skill"><%= skill.description %></p>
    <% }) %>
    <h3>Description :</h3>
    <p><%= agent.description %></p>
    <em>"<%= agent.quote %>"</em>
    </div>
    </div>
    </div>
</body>
</html>